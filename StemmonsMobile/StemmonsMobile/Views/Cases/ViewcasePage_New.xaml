<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:StemmonsMobile"
             x:Class="StemmonsMobile.Views.Cases.ViewcasePage_New" 
              xmlns:androidSpecific="clr-namespace:Xamarin.Forms.PlatformConfiguration.AndroidSpecific;assembly=Xamarin.Forms.Core"
             ControlTemplate="{StaticResource TealTemplate}">
    <ContentPage.Resources>
        <ResourceDictionary>
            <local:HtmlLabelConverter x:Key="HtmlLabelConverter"/>
        </ResourceDictionary>
    </ContentPage.Resources>
    <ContentPage.Content>
        <ScrollView VerticalOptions="FillAndExpand">
            <StackLayout  >
                <Grid x:Name="grd_warning" Grid.Row="0" IsClippedToBounds="True"/>

                <StackLayout x:Name="CasesView_ControlStack"
                          Margin="0,10,10,10">
                </StackLayout>

                <ListView  x:Name="gridCasesnotes"  
                          HasUnevenRows="True" 
                           androidSpecific:ListView.IsFastScrollEnabled="True"
                         ItemTapped="GridCasesnotes_ItemTapped"
                          IsGroupingEnabled="True">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <ViewCell.View>
                                    <ScrollView>
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="auto" />
                                                <RowDefinition Height="auto" />
                                            </Grid.RowDefinitions>
                                            <Label  FormattedText="{Binding Note, Converter={StaticResource HtmlLabelConverter}}" 
                                                        Grid.Row="0"    Style="{StaticResource defaultLabelSize_16}"
                                                        IsVisible="{Binding LabelVisible}"/>

                                            <Image  x:Name="App_Logo" Aspect="AspectFit"
                                  Grid.Row="1"
                                  HeightRequest="100" WidthRequest="100"
                                  Source="{Binding ImageURL}"
                                  IsVisible="{Binding ImageVisible}"/>
                                        </Grid>
                                    </ScrollView>
                                </ViewCell.View>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>

                    <ListView.GroupHeaderTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <ViewCell.View >
                                    <StackLayout Orientation="Horizontal" HorizontalOptions="Fill"
                                 BackgroundColor="#DEE7F3" VerticalOptions="Center" HeightRequest="45"  >
                                        <StackLayout Orientation="Horizontal" BackgroundColor="#DEE7F3"
                                   HorizontalOptions="CenterAndExpand" VerticalOptions="Center">
                                            <Label Text="Notes: " FontAttributes="Bold"   FontSize="14"/>
                                            <Label FontSize="14" FontAttributes="Bold" Text="{Binding CreatedDate}"   />
                                            <Label FontSize="14" FontAttributes="Bold" Text="{Binding Uname}"
                               Margin="10,0,0,0" />

                                        </StackLayout>
                                    </StackLayout>
                                </ViewCell.View>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.GroupHeaderTemplate>
                </ListView>

            </StackLayout>
