<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:StemmonsMobile"
             x:Class="StemmonsMobile.Views.Standards.TopicPage">

    <ContentPage.ToolbarItems>
        <ToolbarItem   Icon="Assets/icon_topic.png" Text="Topic View" Clicked="Topics_Clicked" />
    </ContentPage.ToolbarItems>

    <ContentPage.Content>
        <StackLayout x:Name="Main_Stack"  >
            
            <WebView x:Name="webView" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"  />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>