                                                    <ViewCell.View>
                                                        <StackLayout Orientation="Horizontal"
                                                             HorizontalOptions="Fill" 
                                                         BackgroundColor="#DEE7F3" VerticalOptions="Center"   >
                                                            <StackLayout Orientation="Horizontal" 
                                                                 BackgroundColor="#DEE7F3" HorizontalOptions="CenterAndExpand" VerticalOptions="Center">
                                                                <Label Text="Notes: " FontAttributes="Bold"   FontSize="12"  FontFamily="{local:CustomFont FontFileAndName=Stawix - SoinSansNeue-Roman#Soin Sans Neue}"/>
                                                                <Label FontSize="12" FontAttributes="Bold" Text="{Binding CreatedDate}"  FontFamily="{local:CustomFont FontFileAndName=Stawix - SoinSansNeue-Roman#Soin Sans Neue}"/>
                                                                <Label FontSize="12" FontAttributes="Bold" Text="{Binding Uname}" Margin="10,0,0,0"  FontFamily="{local:CustomFont FontFileAndName=Stawix - SoinSansNeue-Roman#Soin Sans Neue}"/>

