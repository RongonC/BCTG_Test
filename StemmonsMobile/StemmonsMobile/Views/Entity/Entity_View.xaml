                                <Button x:Name="btn_viewnotes" Grid.Row="2" Text="View Notes" 
                                    Clicked="Btn_viewnotes_Clicked" BackgroundColor="Transparent"/>
                                <Label x:Name="line_relatedgrid" Grid.Row="3"  BackgroundColor="#D0D0D0" HeightRequest="1" />
                                <Grid Grid.Row="4" >
                                    <ListView  x:Name="GroupedView"  
                                   Header="{Binding Title}" 
                                       ItemTapped="GroupedView_ItemTapped" 
                                   GroupDisplayBinding="{Binding Title}"
                                    HasUnevenRows="True" 
                                   IsGroupingEnabled="True" 
                                   RowHeight="40"  >
                                        <ListView.ItemTemplate>
                                            <DataTemplate>
                                                <ViewCell>
                                                    <ViewCell.View>
                                                        <StackLayout Orientation="Horizontal">
                                                            <StackLayout HorizontalOptions="StartAndExpand" >
                                                                <Label  Text="{Binding Name}" Style="{StaticResource defaultLabelSize_16}"
                                                            TextColor="Black" Margin="10,10,0,0" 
                                                            HorizontalOptions="End" XAlign="End"  FontFamily="{local:CustomFont FontFileAndName=Stawix - SoinSansNeue-Roman#Soin Sans Neue}"/>
                                                            </StackLayout>
                                                            <Button Image="{Binding Icon}"  
                                                        BackgroundColor="Transparent"  
                                                        WidthRequest="40"   
                                                        HorizontalOptions="End" Margin="0,0,0,0"/>
                                                        </StackLayout>
                                                    </ViewCell.View>
                                                </ViewCell>
                                            </DataTemplate>
                                        </ListView.ItemTemplate>
                                        <ListView.GroupHeaderTemplate>
                                            <DataTemplate>
                                                <ViewCell>
                                                    <StackLayout Orientation="Horizontal" Padding="0,5,5,5"  >
                                                        <Button Image="{Binding StateIcon}"
                                              BackgroundColor="Transparent"
                                              WidthRequest="40"
                                               Clicked="HeaderTapped" 
                                              CommandParameter="{Binding .}"/>
                                                        <Label Text="{Binding TitleWithItemCount}" 
                                     TextColor="#005569"  
                                     FontSize="15"
                                     VerticalOptions="Center"/>
                                                    </StackLayout>
                                                </ViewCell>
                                            </DataTemplate>
                                        </ListView.GroupHeaderTemplate>
                                        <ListView.Footer>
                                            <StackLayout Orientation="Horizontal" />
                                        </ListView.Footer>
                                    </ListView>
                                </Grid>

                                <Label Grid.Row="5" BackgroundColor="#D0D0D0" HeightRequest="1"/>

                                <Grid Grid.Row="6" Margin="10,0,0,0"  HorizontalOptions="Fill">
                                    <Grid.RowDefinitions>
                                        <RowDefinition  Height="1"/>
                                        <RowDefinition  Height="auto"/>
                                        <RowDefinition Height="5" />
                                        <RowDefinition  Height="auto"/>
                                        <RowDefinition Height="5" />
                                        <RowDefinition  Height="auto"/>
                                        <RowDefinition Height="5" />
                                        <RowDefinition  Height="auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="auto"/>
                                        <ColumnDefinition Width="5"/>
                                        <ColumnDefinition Width="auto"/>
                                    </Grid.ColumnDefinitions>
                                    <!--<Label Grid.Row="0" Grid.ColumnSpan="3"   BackgroundColor="#D0D0D0" HeightRequest="1"  />-->
                                    <Label Grid.Row="1" Grid.Column="0" Text="Created By :" FontAttributes="Bold" FontSize="14"  FontFamily="{local:CustomFont FontFileAndName=Stawix - SoinSansNeue-Roman#Soin Sans Neue}"/>
                                    <Label Grid.Row="3" Grid.Column="0" Text="Assigned  To :" FontAttributes="Bold" FontSize="14"  FontFamily="{local:CustomFont FontFileAndName=Stawix - SoinSansNeue-Roman#Soin Sans Neue}"/>
                                    <Label Grid.Row="5" Grid.Column="0" Text="Owner :" FontAttributes="Bold" FontSize="14"  FontFamily="{local:CustomFont FontFileAndName=Stawix - SoinSansNeue-Roman#Soin Sans Neue}"/>
                                    <Label Grid.Row="7" Grid.Column="0" Text="Modified  By :" FontAttributes="Bold" FontSize="14"  FontFamily="{local:CustomFont FontFileAndName=Stawix - SoinSansNeue-Roman#Soin Sans Neue}"/>

                                    <!--<Label Grid.Row="0" Grid.ColumnSpan="3"   BackgroundColor="#D0D0D0" HeightRequest="1"  />-->
                                    <Label Grid.Row="1" Grid.Column="2"  FontSize="14" x:Name="lbl_createname"   FontFamily="{local:CustomFont FontFileAndName=Stawix - SoinSansNeue-Roman#Soin Sans Neue}"/>
                                    <Label Grid.Row="3" Grid.Column="2" FontSize="14"  x:Name="lbl_assignto"   FontFamily="{local:CustomFont FontFileAndName=Stawix - SoinSansNeue-Roman#Soin Sans Neue}"/>
                                    <Label Grid.Row="5" Grid.Column="2" FontSize="14"  x:Name="lbl_ownername"   FontFamily="{local:CustomFont FontFileAndName=Stawix - SoinSansNeue-Roman#Soin Sans Neue}"/>
                                    <Label Grid.Row="7" Grid.Column="2" FontSize="14"  x:Name="lbl_modifiedname"   FontFamily="{local:CustomFont FontFileAndName=Stawix - SoinSansNeue-Roman#Soin Sans Neue}"/>

                                </Grid>
                            </Grid>
                        </StackLayout>
                    </ScrollView>

                    <StackLayout Orientation="Horizontal" VerticalOptions="EndAndExpand" Grid.Row="1" 
                                 IsClippedToBounds="True" BackgroundColor="White">
                        <Button x:Name="btn_home" Image="Assets/Home_Icon.png"  BackgroundColor="Transparent"  HorizontalOptions="CenterAndExpand" Clicked="btn_home_Clicked"/>
                        <Button x:Name="btn_add" Text="+" FontSize="35" Clicked="btn_add_Clicked" IsVisible="False" BackgroundColor="Transparent"  HorizontalOptions="CenterAndExpand" />
                        <Button x:Name="btn_more" Image="Assets/menuicon.png" BackgroundColor="Transparent" Clicked="btn_more_Clicked" HorizontalOptions="CenterAndExpand" />
                    </StackLayout>
                </StackLayout>
            </Grid>

            <ContentView x:Name="overlay" AbsoluteLayout.LayoutBounds="0, 0, 1, 1"   IsVisible="False"
                         AbsoluteLayout.LayoutFlags="All" 
                         BackgroundColor="Transparent">
                <StackLayout  Orientation="Horizontal" VerticalOptions="CenterAndExpand"
                              HorizontalOptions="CenterAndExpand" BackgroundColor="#00FFFFFF">

                    <ActivityIndicator x:Name="activityIndicator" 
                                       IsRunning="True" IsVisible="True" Color="Black">
                        <ActivityIndicator.Margin>
                            <OnPlatform iOS="20,20,0,20" Android="25,10,0,10" Default="25,10,0,10" x:TypeArguments="Thickness" />
                        </ActivityIndicator.Margin>
                    </ActivityIndicator>
                    <Label Text="Loading..." TextColor="Black" 
                           VerticalOptions="Center" HorizontalOptions="Center"
                           VerticalTextAlignment="Center" HorizontalTextAlignment="Center">
                        <Label.Margin>
                            <OnPlatform iOS="0,20,20,20" Android="0,15,25,15" x:TypeArguments="Thickness" />
                        </Label.Margin>
                    </Label>
                </StackLayout>
            </ContentView>

        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>
