            <DataTemplate x:Key="EntityTypeCategorytemplate">
                <ViewCell>
                    <!--<ViewCell.ContextActions>
                        <MenuItem x:Name="Menu_Del"  Text="Delete" IsDestructive="True" 
                                CommandParameter="{Binding .}" />
                        <MenuItem x:Name="Menu_Details"  Text="Details"  
                                CommandParameter="{Binding .}"/>
                    </ViewCell.ContextActions>-->
                    <ViewCell.View>
                        <StackLayout Orientation="Horizontal" HeightRequest="30">
                            <StackLayout HorizontalOptions="StartAndExpand">
                                <Label  Text="{Binding EntityTypeCategoryName}" VerticalOptions="Center" TextColor="Black" Margin="15,7,0,0" HorizontalOptions="End"  FontFamily="{local1:CustomFont FontFileAndName=Stawix - SoinSansNeue-Roman#Soin Sans Neue}"/>
                            </StackLayout>
                            <Image Source="Assets/dropdowniconClose.png"  
                                           HorizontalOptions="End" VerticalOptions="Center" Margin="0,0,10,0"/>
                        </StackLayout>
                    </ViewCell.View>
                </ViewCell>
            </DataTemplate>
            
            <DataTemplate x:Key="HistoryTypetemplate">
                <ViewCell>
                    <ViewCell.View>
                        <StackLayout>
                            <StackLayout>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto" />
                                        <RowDefinition Height="auto" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="4*" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="2.5*" />
                                        <ColumnDefinition Width="25" />
                                    </Grid.ColumnDefinitions>
                                    <Grid Grid.Row="0" Grid.ColumnSpan="2">
                                        <Label Text="{Binding Name}" Grid.ColumnSpan="2" Style="{StaticResource defaultLabelSize}" Margin="10,-2,0,0" HorizontalOptions="Start" VerticalOptions="Center" />
                                    </Grid>
                                    <Grid Grid.Row="0" Grid.Column="2">
                                        <Label Text="{Binding Address}" Style="{StaticResource defaultLabelSize}" TextColor="Orange" HorizontalOptions="EndAndExpand" />
                                    </Grid>
                                    <Grid Grid.Row="1" Grid.ColumnSpan="3">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <Label Text="{Binding Field2}" FontSize="12" LineBreakMode="TailTruncation" Grid.Column="0" HorizontalOptions="Center" />
                                        <Label Text="{Binding Field3}" FontSize="12" LineBreakMode="TailTruncation" Grid.Column="1" HorizontalOptions="Center" />
                                        <Label Text="{Binding Field4}" LineBreakMode="TailTruncation" FontSize="12" Grid.Column="2" HorizontalOptions="End" />
                                    </Grid>
                                    <Image Source="{Binding Img}" Grid.RowSpan="2" Grid.Column="3" HorizontalOptions="End" VerticalOptions="Center" Margin="5,0,10,0" />
                                </Grid>
                            </StackLayout>
                        </StackLayout>
                    </ViewCell.View>
                </ViewCell>
            </DataTemplate>
            <DataTemplate x:Key="LocationEntityTypetemplate">
                <ViewCell>
                    <ViewCell.View>
                        <StackLayout Orientation="Horizontal" HeightRequest="30">
                            <StackLayout HorizontalOptions="StartAndExpand">
                                <Label Text="{Binding Name}" VerticalOptions="Center" TextColor="Black" Margin="15,4,0,0" HorizontalOptions="End" />
                            </StackLayout>
                            <Label Text="{Binding Type_value}" HorizontalOptions="End" VerticalOptions="Center" TextColor="Orange" />
                            <Image Source="{Binding Img}" HorizontalOptions="End" VerticalOptions="Center" Margin="0,0,10,0" />
                        </StackLayout>
                    </ViewCell.View>
                </ViewCell>
            </DataTemplate>
            <DataTemplate x:Key="EntityTypeDetailtemplate">
                <ViewCell>
                    <StackLayout Orientation="Horizontal" HeightRequest="30">
                        <StackLayout HorizontalOptions="StartAndExpand">
                            <Label Text="{Binding Name}" VerticalOptions="Center" Margin="15,4,0,0" TextColor="Black" HorizontalOptions="End" />
                        </StackLayout>
                        <Label Text="{Binding Type_value}" HorizontalOptions="End" VerticalOptions="Center" TextColor="Orange" />
                        <Image Source="{Binding Img}" HorizontalOptions="End" VerticalOptions="Center" Margin="0,0,10,0" />
                    </StackLayout>
                </ViewCell>
            </DataTemplate>
