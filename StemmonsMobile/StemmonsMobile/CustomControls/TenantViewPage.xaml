<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:cnt="clr-namespace:StemmonsMobile.Controls"
             x:Class="StemmonsMobile.CustomControls.TenantViewPage"
             x:Name="this" BindingContext="{x:Reference this}" >
    <ContentPage.Content>
        <AbsoluteLayout >

            <StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="StartAndExpand" x:Name="PropertiesGrid"  AbsoluteLayout.LayoutBounds="0, 0, 1, 1"
                   AbsoluteLayout.LayoutFlags="All" >
                <StackLayout x:Name="frmField" VerticalOptions="StartAndExpand" Grid.Row="0" 
                   Padding="0" Margin="10,5,10,0" />
            </StackLayout>
            <!--<cnt:ActivityProgressBar IsVisible="{Binding IsBUSY}" />-->
        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>